<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/defaultPadding"
    android:paddingEnd="@dimen/defaultPadding"
    android:background="@drawable/bg_slide_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/defaultPadding"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:textColor="@color/colorTextForeground"
        android:text="定时关闭"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time0"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="不开启"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time10"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="10分钟后"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time20"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="20分钟后"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time30"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="30分钟后"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time45"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="45分钟后"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/time60"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="60分钟后"/>

    <com.dirror.music.widget.RightView
        android:id="@+id/timeCustom"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:text="自定义"/>
</LinearLayout>